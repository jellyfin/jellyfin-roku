' @desc TrackerTask init function
Sub init()
    m.top.functionName = "tracker"
    m.top.control = "RUN"

    m.config = RALE_Config()
    m.sceneBG = m.top.GetScene().getChild(0)
    m.raleVersion = "1.7.11"
