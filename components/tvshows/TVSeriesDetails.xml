<?xml version="1.0" encoding="utf-8"?>
<component name="TVSeriesDetails" extends="JFScreen">
  <children>
    <LayoutGroup id="toplevel" layoutDirection="vert" translation="[100, 100]" itemSpacings="[25]">
      <LayoutGroup layoutDirection="horiz" itemSpacings="[15]">
        <LayoutGroup layoutDirection="vert" itemSpacings="[25]">
          <LayoutGroup layoutDirection="vert" itemSpacings="[0]">
            <ScrollingText id="title" horizAlign="left" font="font:MediumBoldSystemFont" maxWidth="1400" height="45" />
          </LayoutGroup>

          <LayoutGroup id="topLevelDetails" layoutDirection="horiz" itemSpacings="[25]">
            <LayoutGroup id="runtimeContainer" layoutDirection="horiz" itemSpacings="[15]">
              <Poster id="runtimeIcon" width="35" height="35" uri="pkg:/images/icons/35px/clock.png" />
              <Text id="runtime" vertAlign="center" font="font:MediumSystemFont" height="35" />
            </LayoutGroup>

            <LayoutGroup id="numberofepisodesContainer" layoutDirection="horiz" itemSpacings="[15]">
              <Poster id="numberofepisodesIcon" width="35" height="35" uri="pkg:/images/icons/35px/tv.png" />
              <Text id="numberofepisodes" vertAlign="center" font="font:MediumSystemFont" height="35" />
            </LayoutGroup>

            <LayoutGroup id="releasedContainer" layoutDirection="horiz" itemSpacings="[15]">
              <Poster id="releasedIcon" width="35" height="35" uri="pkg:/images/icons/35px/calendar.png" />
              <Text id="released" vertAlign="center" font="font:MediumSystemFont" height="35" />
            </LayoutGroup>

            <LayoutGroup id="ratingContainer" layoutDirection="horiz" itemSpacings="[15]">
              <Poster id="ratingIcon" width="35" height="35" uri="pkg:/images/icons/35px/rating.png" />
              <Text id="rating" vertAlign="center" font="font:MediumSystemFont" height="35" />
            </LayoutGroup>

            <LayoutGroup id="communityReviewContainer" layoutDirection="horiz" itemSpacings="[15]">
              <Poster id="communityReviewIcon" height="35" width="35" uri="pkg:/images/sharp_star_white_18dp.png" />
              <Text id="communityReview" vertAlign="center" font="font:MediumSystemFont" height="35" />
            </LayoutGroup>

            <LayoutGroup id="historyContainer" layoutDirection="horiz" itemSpacings="[15]">
              <Poster id="historyIcon" width="35" height="35" uri="pkg:/images/icons/35px/antenna.png" />
              <ScrollingText id="history" vertAlign="center" font="font:MediumSystemFont" maxWidth="175" height="35" />
            </LayoutGroup>

            <LayoutGroup id="genresContainer" layoutDirection="horiz" itemSpacings="[15]">
              <Poster id="genresIcon" width="35" height="35" uri="pkg:/images/icons/35px/genre.png" />
              <ScrollingText id="genres" vertAlign="center" font="font:MediumSystemFont" maxWidth="250" height="35" />
            </LayoutGroup>
          </LayoutGroup>

          <Text id="overview" wrap="true" lineSpacing="25" maxLines="3" width="1400" />

          <ButtonGroupHoriz id="buttons" itemSpacings="[20]">
            <IconButton id="resume" background="#070707" padding="35" icon="pkg:/images/icons/resume.png" text="Resume" height="65" width="140" />
            <IconButton id="play" background="#070707" padding="35" icon="pkg:/images/icons/play.png" text="Play" height="65" width="140" />
            <IconButton id="shuffle" background="#070707" padding="35" icon="pkg:/images/icons/shufflePlay.png" text="Shuffle" height="65" width="140" />
          </ButtonGroupHoriz>
        </LayoutGroup>

        <Poster id="tvshowPoster" width="300" height="450">
          <PlayedCheckmark id="playedIndicator" translation="[240, 0]" />
        </Poster>
      </LayoutGroup>

      <Rectangle id='seasonListRect' translation="[-30, 0]" width="1720" height="390">
        <TVSeasonGrid
          id="seasons"
          numColumns="8"
          numRows="2"
          clippingRect="[-10,-10,2020,350]"
          vertFocusAnimationStyle="fixed"
          itemComponentName="TVSeasonGridItem"
          itemSpacing="[20, 50]"
          itemSize="[180, 301]"
          rowHeights="[301]"
          drawFocusFeedback="true"
          translation="[45, 25]" />
      </Rectangle>
    </LayoutGroup>

    <ExtrasSlider visible="false" id="tvSeasonExtras" />
  </children>
  <interface>
    <function name="getFocusedItem" />
    <field id="displayResumeButton" type="bool" alwaysNotify="true" onChange="onDisplayResumeButtonChange" />
    <field id="refreshSeasonDetailsData" type="bool" alwaysNotify="true" />
    <field id="itemContent" type="node" onChange="itemContentChanged" />
    <field id="seasonData" type="node" alias="seasons.content" />
    <field id="seasonSelected" alias="seasons.itemSelected" alwaysNotify="true" />
    <field id="quickPlayNode" type="node" alwaysNotify="true" />
    <field id="selectedButtonIndex" type="integer" value="-1" />
    <field id="playSeriesFromStart" type="bool" />
    <field id="showItemTitles" type="string" value="showalways" />
  </interface>
</component>