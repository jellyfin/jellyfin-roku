<?xml version="1.0" encoding="utf-8"?>
<component name="TVEpisodeListItem" extends="Group">
  <children>
    <LayoutGroup id="toplevel" layoutDirection="vert" itemSpacings="[40]" translation="[0,15]">
      <LayoutGroup id="main_group" layoutDirection="horiz" itemSpacings="[20]">

        <Poster id="poster" width="233" height="200" loadDisplayMode="scaleToZoom">
          <PlayedCheckmark id="playedIndicator" translation="[173, 0]" />
          <Rectangle id="progressBackground" visible="false" color="0x00000098" width="233" height="16" translation="[0,186]">
            <Rectangle id="progressBar" color="#00a4dcFF" width="0" height="16" visible="false" />
          </Rectangle>
        </Poster>

        <LayoutGroup id="text" layoutDirection="vert" itemSpacings="[10]">
          <Poster id="null" height="1" />
          <ScrollingText id="title" font="font:MediumBoldSystemFont" maxWidth="540" />

          <LayoutGroup id="infoBar" layoutDirection="horiz" itemSpacings="[15]">
            <Text id="runtime" font="font:SmallestSystemFont" />

            <LayoutGroup id="rating" layoutDirection="horiz" itemSpacings="[-5]">
              <Poster id="star" uri="pkg:/images/sharp_star_white_18dp.png" height="20" width="20" />
              <Text id="communityRating" font="font:SmallestSystemFont" />
            </LayoutGroup>

            <Text id="endtime" font="font:SmallestSystemFont" />
            <Text id="aired" font="font:SmallestSystemFont" />
          </LayoutGroup>

          <Text
            id="overview"
            font="font:SmallestSystemFont"
            wrap="true"
            height="130"
            width="540"
            maxLines="3"
            lineSpacing="15"
            ellipsizeOnBoundary="true" />
        </LayoutGroup>
      </LayoutGroup>
    </LayoutGroup>
  </children>
  <interface>
    <field id="itemContent" type="node" onChange="itemContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
  </interface>
</component>