<?xml version="1.0" encoding="utf-8"?>
<component name="TVSeasonRowItem" extends="Group">
  <children>
    <Rectangle id="backdrop" />

    <LayoutGroup id="title_group" layoutdirection="vert" itemSpacings="[5]">
      <Poster id="poster" loadDisplayMode="scaleToZoom">
        <PlayedCheckmark id="playedIndicator" />
      </Poster>
      <ScrollingText id="title" horizAlign="left" font="font:SmallSystemFont" repeatCount="0" />
    </LayoutGroup>

  </children>
  <interface>
    <field id="height" type="float" onChange="onHeightChanged" />
    <field id="width" type="float" onChange="onWidthChanged" />

    <field id="itemContent" type="node" onChange="itemContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
  </interface>
</component>