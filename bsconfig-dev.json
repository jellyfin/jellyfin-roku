{
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "images/**/*.*",
    "locale/**/*.*",
    "settings/*.*"
  ],
  "plugins": ["@rokucommunity/bslint"],
  "diagnosticFilters": ["node_modules/**/*", "**/roku_modules/**/*"],
  "sourceMap": true,
  "autoImportComponentScript": true,
  "stagingDir": "build/staging-dev",
  "retainStagingDir": true,
  "copyToStaging": [
    {
      "src": "manifest-dev",
      "dest": "manifest"
    }
  ]
}
