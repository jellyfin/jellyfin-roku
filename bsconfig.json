{
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "images/**/*.*",
    "resources/**/*.*",
    "locale/**/*.*",
    "settings/*.*"
  ],
  "plugins": ["@rokucommunity/bslint", "roku-log-bsc-plugin"],
  "rokuLog": {
    "strip": false,
    "insertPkgPath": true,
    "removeComments": false
  },
  "diagnosticFilters": ["node_modules/**/*", "**/roku_modules/**/*"],
  "sourceMap": true,
  "autoImportComponentScript": true,
  "stagingDir": "build/staging",
  "retainStagingDir": true
}
